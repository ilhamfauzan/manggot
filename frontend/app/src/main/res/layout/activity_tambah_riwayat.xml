<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="@dimen/dimen_margin_16"
    android:layout_marginEnd="@dimen/dimen_margin_16"
    android:padding="@dimen/dimen_padding_16"
    tools:context=".ui.pencatatan_history.tambah_riwayat.TambahRiwayatActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:title="Tambah Riwayat"
        app:titleTextColor="@color/black"
        app:titleCentered="true"
        app:titleTextAppearance="@style/ToolbarTitleStyle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Masukkan detail riwayat jadwal"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginTop="27dp"
        app:layout_constraintTop_toBottomOf="@id/topAppBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTanggalWaktu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tanggal &amp; waktu"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/dimen_margin_12"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/edtTanggalWaktu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Masukkan Tanggal &amp; Waktu"
        android:layout_marginTop="4dp"
        android:elevation="0dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:boxCornerRadiusTopStart="12dp"
        app:boxCornerRadiusTopEnd="12dp"
        app:boxCornerRadiusBottomStart="12dp"
        app:boxCornerRadiusBottomEnd="12dp"
        app:boxStrokeColor="@color/gray"
        android:textColorHint="@color/gray"
        app:boxStrokeWidth="0.2dp"
        app:endIconDrawable="@drawable/ic_calendar"
        app:endIconMode="custom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTanggalWaktu">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inputTanggalRiwayat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:clickable="true"
            android:inputType="none" />
    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTotalSampah"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total Sampah"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/dimen_margin_12"
        app:layout_constraintTop_toBottomOf="@id/edtTanggalWaktu"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/edtTotalSampah"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Masukkan Total Sampah (Kg)"
        android:layout_marginTop="4dp"
        android:elevation="0dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:boxCornerRadiusTopStart="12dp"
        app:boxCornerRadiusTopEnd="12dp"
        app:boxCornerRadiusBottomStart="12dp"
        app:boxCornerRadiusBottomEnd="12dp"
        app:boxStrokeColor="@color/gray"
        android:textColorHint="@color/gray"
        app:boxStrokeWidth="0.2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTotalSampah">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inputTotalSampah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal" />
    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvCatatan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Catatan"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/dimen_margin_12"
        app:layout_constraintTop_toBottomOf="@id/edtTotalSampah"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/edtCatatan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Masukkan Catatan"
        android:layout_marginTop="4dp"
        android:elevation="0dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:boxCornerRadiusTopStart="12dp"
        app:boxCornerRadiusTopEnd="12dp"
        app:boxCornerRadiusBottomStart="12dp"
        app:boxCornerRadiusBottomEnd="12dp"
        app:boxStrokeColor="@color/gray"
        android:textColorHint="@color/gray"
        app:boxStrokeWidth="0.2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvCatatan">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inputKeterangan"
            android:layout_width="match_parent"
            android:layout_height="92dp"
            android:gravity="top|start"
            android:inputType="textMultiLine"
            android:minLines="4"
            android:maxLines="6"
            android:scrollbars="vertical"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSimpan"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginTop="@dimen/dimen_margin_24"
        android:text="Simpan Penjadwalan"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:backgroundTint="@color/primary"
        android:textColor="@color/white"
        app:cornerRadius="12dp"
        app:layout_constraintTop_toBottomOf="@id/edtCatatan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>