<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/soft_white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header with Gradient Background -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_dashboard_header"
            android:orientation="vertical"
            android:paddingBottom="24dp">

            <!-- Top App Bar with GREEN back button -->
            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/topAppBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                app:title="Executive Dashboard"
                app:titleTextColor="@android:color/white"
                app:navigationIcon="@drawable/ic_back"
                app:navigationIconTint="@color/white"
                app:titleTextAppearance="@style/TextAppearance.MaterialComponents.Headline6" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:text="Overview Bisnis"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:alpha="0.9" />

            <!-- Filter Chips -->
            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroupFilter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                app:singleSelection="true"
                app:selectionRequired="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip7d"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7 Hari"
                    android:textColor="@color/state_chip_text"
                    app:chipBackgroundColor="@color/state_chip_bg"
                    app:chipSurfaceColor="@android:color/transparent"
                    app:chipStrokeColor="@color/white"
                    app:chipStrokeWidth="1dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip30d"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30 Hari"
                    android:textColor="@color/state_chip_text"
                    app:chipBackgroundColor="@color/state_chip_bg"
                    app:chipSurfaceColor="@android:color/transparent"
                    app:chipStrokeColor="@color/white"
                    app:chipStrokeWidth="1dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip90d"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="90 Hari"
                    android:textColor="@color/state_chip_text"
                    app:chipBackgroundColor="@color/state_chip_bg"
                    app:chipSurfaceColor="@android:color/transparent"
                    app:chipStrokeColor="@color/white"
                    app:chipStrokeWidth="1dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipAll"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Semua"
                    android:checked="true"
                    android:textColor="@color/state_chip_text"
                    app:chipBackgroundColor="@color/state_chip_bg"
                    app:chipSurfaceColor="@android:color/transparent"
                    app:chipStrokeColor="@color/white"
                    app:chipStrokeWidth="1dp" />

            </com.google.android.material.chip.ChipGroup>

        </LinearLayout>

        <!-- Main Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:clipToPadding="false">

            <!-- Metrics Grid -->
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="2"
                android:alignmentMode="alignBounds"
                android:columnOrderPreserved="false"
                android:useDefaultMargins="true">

                <!-- Card: Total Panen -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="16dp"
                    app:cardElevation="2dp"
                    app:cardCornerRadius="16dp"
                    app:strokeColor="#E0E0E0"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">
                            
                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/ic_harvest"
                                android:background="@drawable/bg_circle_light_green"
                                android:padding="6dp"
                                app:tint="@color/green" />
                                
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:text="Panen"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:textColor="@color/gray" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvTotalPanen"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="0.0 kg"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/black" />

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Card: Sampah Diolah -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_marginStart="8dp"
                    android:layout_marginBottom="16dp"
                    app:cardElevation="2dp"
                    app:cardCornerRadius="16dp"
                    app:strokeColor="#E0E0E0"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/ic_waste"
                                android:background="@drawable/bg_circle_light_blue"
                                android:padding="6dp"
                                app:tint="@color/blue" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:text="Sampah"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:textColor="@color/gray" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvSampahDiolah"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="0.0 kg"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/black" />

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Card: Efisiensi -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_marginEnd="8dp"
                    app:cardElevation="2dp"
                    app:cardCornerRadius="16dp"
                    app:strokeColor="#E0E0E0"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/ic_efficiency"
                                android:background="@drawable/bg_circle_light_green"
                                android:padding="6dp"
                                app:tint="@color/green" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:text="Efisiensi"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:textColor="@color/gray" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvEfisiensi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="0.0%"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/black" />

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Card: Siklus Aktif -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_marginStart="8dp"
                    app:cardElevation="2dp"
                    app:cardCornerRadius="16dp"
                    app:strokeColor="#E0E0E0"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/ic_cycle"
                                android:background="@drawable/bg_circle_light_blue"
                                android:padding="6dp"
                                app:tint="@color/blue" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:text="Siklus"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:textColor="@color/gray" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvSiklusAktif"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="0"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/black" />

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </GridLayout>

            <!-- AI Insights Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="16dp"
                app:strokeColor="#FFD700"
                app:strokeWidth="1dp"
                app:cardBackgroundColor="#FFFDE7">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_sparkle"
                            app:tint="#FBC02D" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="AI Executive Insight"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#F57F17" />
                        
                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />
                            
                        <ProgressBar
                            android:id="@+id/progressAI"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:indeterminateTint="#FBC02D"
                            android:visibility="gone" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvRekomendasi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Memuat analisis cerdas..."
                        android:textSize="14sp"
                        android:lineSpacingExtra="4dp"
                        android:textColor="#424242"
                        android:fontFamily="sans-serif-medium"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Chart Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="12dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tren Hasil Panen"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tvChartSubtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="7 Siklus Terakhir"
                        android:textSize="12sp"
                        android:textColor="@color/gray" />

                    <com.db.williamchart.view.LineChartView
                        android:id="@+id/lineChart"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:layout_marginTop="16dp"
                        app:chart_labelsColor="@color/gray"
                        app:chart_labelsSize="10sp"
                        app:chart_lineColor="@color/green"
                        app:chart_lineThickness="3dp"
                        app:chart_smoothLine="true" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Efficiency Chart Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="32dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="12dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tren Efisiensi Pakan"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tvEfficiencySubtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Perbandingan: 1 kg pakan jadi berapa kg maggot?"
                        android:textSize="12sp"
                        android:textColor="@color/gray" />

                    <com.db.williamchart.view.LineChartView
                        android:id="@+id/lineChartEfficiency"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginTop="16dp"
                        app:chart_labelsColor="@color/gray"
                        app:chart_labelsSize="10sp"
                        app:chart_lineColor="#FF9800"
                        app:chart_lineThickness="3dp"
                        app:chart_smoothLine="true" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
